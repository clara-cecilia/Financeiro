<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Registro Pessoal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroupTipoEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:id="@+id/radioReceber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Me Devem (Receber)"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioPagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eu Devo (Pagar)"
                android:layout_marginTop="8dp"/> </RadioGroup>

        <EditText
            android:id="@+id/editTextNomePessoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome (Ex: João, Mãe)"
            android:inputType="textPersonName|textCapWords"/>

        <EditText
            android:id="@+id/editTextValorEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor (R$)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTextDataEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data (dd/mm/aaaa)"
            android:inputType="date"
            android:focusable="false"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editTextObsEmprestimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observação (Opcional)"
            android:inputType="textCapSentences"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/buttonCancelarEmp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/buttonSalvarEmp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>