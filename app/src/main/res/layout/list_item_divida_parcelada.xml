<?xml version="1.0" encoding="utf-8"?>
<!-- Como cada Dívida Parcelada vai aparecer na lista -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewDescricaoDivida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tênis novo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewValorParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 100,00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarDivida"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="12"
        android:progress="3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/textViewStatusParcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcela 3 de 12"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/textViewValorTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: R$ 1.200,00"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>