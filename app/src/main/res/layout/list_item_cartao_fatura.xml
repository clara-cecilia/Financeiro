<?xml version="1.0" encoding="utf-8"?>
<!--
Como cada fatura vai aparecer na lista de cartões.
IDÊNTICO ao seu anexo.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/checkbox_on_background" /> <!-- (Pago) ou (Aberto) -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">
        <TextView
            android:id="@+id/textViewNomeCartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fácil Visa"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewStatusFatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatura Paga"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewValorFatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 311,14"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>