<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Dívida Parcelada"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextDescricaoDivida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição (Ex: Tênis Novo)"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/editTextValorTotalDivida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor Total (R$)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextQtdParcelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Parcelas (Ex: 10)"
        android:inputType="number"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextDataPrimeiraParcela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data 1ª Parcela (dd/mm/aaaa)"
        android:inputType="date"
        android:focusable="false"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextObsDivida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observação (Opcional)"
        android:inputType="textCapSentences"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/buttonCancelarDivida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonSalvarDivida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
</LinearLayout>