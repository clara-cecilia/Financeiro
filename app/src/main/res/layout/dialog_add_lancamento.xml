<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo Lançamento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextDescricaoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição (Ex: Jantar)"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/editTextValorDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor (R$)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextDataDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data (dd/mm/aaaa)"
        android:inputType="date"
        android:focusable="false"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextObsLancamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observação (Opcional)"
        android:inputType="textCapSentences"
        android:layout_marginTop="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroupTipoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioDespesaDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Despesa"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioReceitaDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receita"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
</LinearLayout>