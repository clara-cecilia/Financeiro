<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Fatura de Cartão"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextNomeCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Cartão (Ex: Nubank)"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/editTextValorFatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor da Fatura (R$)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextDataVencimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vencimento (dd/mm/aaaa)"
        android:inputType="date"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/buttonCancelarFatura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/buttonSalvarFatura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
</LinearLayout>